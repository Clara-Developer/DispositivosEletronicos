@model List<DispositivoEletronico>
<h1>Lista de dispositivos Eletrônicos</h1> 

<table class=" table table-striped table-bordered">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano De Fabricação</th>
            <th>Detalhes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dispositivos in Model)
        {
            <tr> 
                <td>@dispositivos.Marca</td>
                <td>@dispositivos.Modelo</td>
                <td>@dispositivos.AnoDeFabricacao</td>

                <td>
                    @if (dispositivos is Computador)
                    {
                        <strong>RAM:</strong>@(((Computador)dispositivos).MemoriaRam) <br/>
                        <strong>Tipo:</strong> @(((Computador)dispositivos).EhLaptop ? "Laptop" : "Desktop")

                    }
                    else if (dispositivos is Smartphone)
                    {
                        <strong>5G:</strong> @(((Smartphone)dispositivos).Tem5G ? "Sim" : "Não")
                    }
                </td>
            </tr>
        }
    </tbody>
</table>